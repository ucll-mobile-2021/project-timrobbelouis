<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/recipe_list_thumbnail"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginBottom="6dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="6dp"
        android:scaleType="centerInside"
        tools:src="@mipmap/ic_launcher" />

    <RelativeLayout
        android:id="@+id/recipe_list_text_layout"
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@id/recipe_list_thumbnail">

        <TextView
            android:id="@+id/recipe_list_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:textSize="18sp"
            tools:text="Title" />

        <ImageView
            android:id="@+id/NoGlut"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp"
            android:translationX="2dp"
            android:translationY="42dp"
            android:visibility="invisible"
            app:srcCompat="@drawable/no_gluten" />

        <ImageView
            android:id="@+id/Vegan"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:translationX="80dp"
            android:translationY="42dp"
            android:visibility="invisible"
            app:srcCompat="@drawable/vegan_symbol" />

        <ImageView
            android:id="@+id/NoD"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:translationX="40dp"
            android:translationY="42dp"
            android:visibility="invisible"
            app:srcCompat="@drawable/no_milk" />

    </RelativeLayout>

</RelativeLayout>
